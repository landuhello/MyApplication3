<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    android:orientation="vertical"
    tools:context=".view.activity.Main7Activity">
    <LinearLayout
        android:layout_marginTop="37dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/fanhui"
            android:layout_marginLeft="15dp"
            android:src="@drawable/shapee"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:layout_marginLeft="140dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="注册"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <EditText
        android:textColor="#ffffff"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:id="@+id/ed_nickname"
        android:background="@drawable/aa"
        android:layout_marginTop="180dp"
        android:hint="     请输入昵称:"
        android:textColorHint="@color/colorA"

        android:layout_gravity="center"
        />
    <EditText
        android:textColor="#ffffff"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:id="@+id/ed_youxiang"
        android:layout_marginTop="20dp"
        android:background="@drawable/aa"
        android:hint="     请输入邮箱账号:"
        android:textColorHint="@color/colorA"

        android:layout_gravity="center"
        />

    <EditText
        android:textColor="#ffffff"
        android:background="@drawable/aa"
        android:id="@+id/ed_mm"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:hint="     请设置密码:"
        android:textColorHint="@color/colorA" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/aa"
        android:id="@+id/lin1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"

        android:layout_gravity="center"
        >
        <EditText
            android:textColor="#ffffff"
            android:layout_width="216dp"
            android:layout_height="44dp"
            android:id="@+id/ed_zhu"
            android:hint="     请输入验证码:"
            android:textColorHint="@color/colorA"

            android:ems="10"
            />
        <Button

            android:textColor="#333333"
            android:background="@drawable/yanse"
            android:layout_width="96dp"
            android:layout_height="44dp"
            android:id="@+id/but_verificationcode"
            android:text="获取验证码"

            />
    </LinearLayout>
<LinearLayout
    android:layout_gravity="center"
    android:layout_width="312dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:textSize="10sp"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_deng"
        android:text="已有账号  立即登录"
        android:textColor="@color/colorA"

        />
</LinearLayout>

    <Button
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:id="@+id/but_zhuce"
        android:layout_marginTop="20dp"
        android:background="@drawable/hh"
        android:textColor="#ffffff"
        android:text="注册"
        android:textSize="16sp"
        />
</LinearLayout>