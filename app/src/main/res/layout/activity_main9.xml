<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    android:orientation="vertical"
    tools:context=".view.activity.Main9Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/shapee" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="140dp"
            android:text="我的"
            android:textColor="#ffffff"
            android:textSize="16sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="178dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="#1c2243"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="57dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="头像"
                android:textColor="#deffffff"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/my_tou"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="164dp"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:includeFontPadding="false"
                android:text="昵称"
                android:textColor="#deffffff"

                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="164dp"
                android:text="电影故事"
                android:textColor="#deaaaaaa"
                android:textSize="12sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:includeFontPadding="false"
                android:text="性别"
                android:textColor="#deffffff"

                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="164dp"
                android:includeFontPadding="false"
                android:text="电影故事"
                android:textColor="#deaaaaaa"
                android:textSize="12sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="出生日期"
                android:textColor="#deffffff"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/my_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="164dp"
                android:text="1991-03-20"
                android:textColor="#deaaaaaa"
                android:textSize="12sp"></TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#1c2243">

        <TextView
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="邮&#12288;&#12288;箱"
            android:textColor="#deffffff"
            android:textSize="14sp"

            />

        <TextView

            android:id="@+id/my_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="104dp"
            android:text="25464516@qq.com"
            android:textColor="#deaaaaaa"
            android:textSize="12sp"></TextView>
    </LinearLayout>
</LinearLayout>