<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    android:orientation="vertical"
    tools:context=".view.activity.MovexiangqingMainActivity">
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/fanhui"
            android:layout_marginLeft="15dp"
            android:src="@drawable/shapee"
            android:layout_width="16dp"
            android:layout_height="16dp" />
        <TextView
            android:layout_width="64dp"
            android:layout_height="22dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="影院详情"
            android:textColor="#deffffff"
            android:textSize="16sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/emptyheart" />
        <TextView
            android:id="@+id/xiangqing_text"
            android:layout_width="182dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="#deffffff"
            android:textSize="14sp"
            tools:text="保利国际影城（龙旗广场店）" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:orientation="horizontal"
        android:background="#141931"
        >
        <TextView

            android:layout_marginLeft="16dp"
            android:textColor="#d3af56"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:text="3D眼镜"
            />
        <TextView
            android:layout_marginLeft="16dp"
            android:textColor="#d3af56"
            android:layout_width="68dp"
            android:layout_height="21dp"

            android:text="儿童优惠"
            />
        <TextView
            android:layout_marginLeft="16dp"
            android:textColor="#d3af56"
            android:layout_width="48dp"
            android:layout_height="21dp"
            android:text="4K厅"
            />
        <ImageView
            android:layout_marginLeft="40dp"
            android:src="@drawable/group_10"
            android:layout_width="13dp"
            android:layout_height="16dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="49dp"
            android:layout_height="17dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="到这里去"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.design.widget.TabLayout
            android:background="#1c2243"
            app:tabGravity="center"
            app:tabTextColor="#ffffff"
            android:id="@+id/xiangqing_tab"
            android:layout_width="match_parent"
            android:layout_height="38dp"></android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager

            android:id="@+id/xiangqing_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    </LinearLayout>
</LinearLayout>