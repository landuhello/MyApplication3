<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    android:orientation="vertical"
    tools:context=".view.activity.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/shapee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_movie_thekeyword"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/etselector"
                android:hint="请输入影片关键字"
                android:paddingLeft="10sp" />

            <ImageView
                android:id="@+id/iv_search_movie"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="42dp"
                android:layout_marginRight="30dp"
                android:src="@mipmap/icon_search" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="145dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_thekeyword"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>