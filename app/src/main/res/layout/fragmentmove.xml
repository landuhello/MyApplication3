<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:background="#141931"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        >
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/dingwei"
        android:src="@drawable/icon_location"
        android:layout_marginLeft="25dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />
        <TextView
            android:layout_marginLeft="58dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:text="北京"
            />

        <ImageView

            android:layout_centerVertical="true"
            android:id="@+id/move_sou"
            android:layout_width="24dp"
            android:layout_height="24dp"
           android:layout_marginLeft="312dp"
            android:background="@mipmap/icon_search" />
    </RelativeLayout>
<android.support.design.widget.TabLayout
    app:tabGravity="fill"
    app:tabTextColor="#ffffff"
    android:id="@+id/fragmenttwo_tab"
    android:background="#1c2243"
    android:layout_width="match_parent"
    android:layout_height="38dp"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/fragmenttwo_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
